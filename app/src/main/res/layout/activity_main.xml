<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg1"
        android:scaleType="centerCrop"
        android:alpha="0.55" />

    <EditText
        android:id="@+id/edt"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:hint="Enter Here"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.234" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:alignmentMode="alignMargins"
        app:columnCount="4"
        android:padding="16dp"
        app:rowCount="5"
        app:layout_constraintTop_toBottomOf="@id/edt"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- First Row -->
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_columnWeight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            app:layout_rowWeight="1"
            android:text="AC" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="0"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="%" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="0"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="C" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="0"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="/" />

        <!-- Second Row -->
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="7" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="1"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="8" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="1"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="9" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="1"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="x" />

        <!-- Third Row -->
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="4" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="2"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="2"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="6" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="2"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="-" />

        <!-- Fourth Row -->
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="3"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="3"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="3"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="3"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="+" />

        <!-- Fifth Row -->
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="4"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="4"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginStart="10dp"
            android:text="0" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="4"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginStart="10dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="4"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="="
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginStart="10dp" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
